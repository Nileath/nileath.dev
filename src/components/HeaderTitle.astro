---
const title = "N1LEATH"
---

<h2 class="glitch-effect" data-text={title}>
  {title}
</h2>

<style>
  .glitch-effect {
    position: relative;
    color: #000;
    font-size: 2rem;
    letter-spacing: 0.5em;
    animation: glitch-skew 1s infinite linear alternate-reverse;
  }

  :global(.dark) .glitch-effect {
    color: #fff;
  }

  .glitch-effect::before {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    left: 2px;
    text-shadow: -2px 0 #ff00c1;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim 5s infinite linear alternate-reverse;
  }

  .glitch-effect::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    left: -2px;
    text-shadow:
      -2px 0 #ff00c1,
      2px 2px #ff00c1;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim2 5s infinite linear alternate-reverse;
  }

  @keyframes glitch-skew {
    0% {
      transform: skew(4deg);
    }
